[global]
workgroup = WORKGROUP
server string = Samba Server %v
netbios name = ubuntu
security = user
map to guest = bad user
dns proxy = no

#============================ Share Definitions ============================== 

[Anonymous]
path = /home/samba/anonymous
browsable =yes
writable = yes
guest ok = yes
read only = no
force user = nobody

[secured]
path = /home/samba/secured
valid users = @smbgrp,@chris,@toby,@skipper,@lluo
guest ok = no
writable = yes
browsable = yes

